{
  "name": "restaurant-reservation-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend-web\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend-web",
    "build": "npm run build -w backend && npm run build -w frontend-web",
    "test": "npm run test -w backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
